<% if @book.nil? %> ERROR 404: BOOK NOT FOUND <% else %>
<div class="edit-book">
  <div class="edit-book--left">
    <img
      class="book-cover"
      src="<%= @book.thumbnail %>"
      alt="<%= @book.title %>"
    />
  </div>

  <div class="edit-book--right">
    <h2 class="book-title"><%= @book.title %></h2>
    <span class="by">
      by <%= @book.authors.join(', ') unless @book.authors.nil?%>
    </span>
    <% unless @book.description.nil? %>
    <p class="book-description">"<%= @book.description %>"</p>
    <% end %>
    <% if @book.price == "Not available"%>
    <p class="book-purchase-button">Not available to buy</p>
    <% else %>
    <a
      class="book-purchase-button"
      href="https://play.google.com/store/books/details?id=<%= @book.uid %>&rdid=book-<%= @book.uid %>"
    >
      Buy for <%= @book.price %>
      <img src="/purchase-cart.svg" alt="buy" />
    </a>
    <% end %>
  </div>
</div>
<% end %>

<style>
  .book-title {
    font-size: 20px;
    line-height: 27px;
    color: #1a202c;
  }

  .by {
    font-size: 16px;
    line-height: 22px;
    color: #4a5568;
  }

  .edit-book {
    display: flex;
    width: 630px;
  }

  .edit-book--left img {
    height: 230px;
    width: 153px;
  }

  .edit-book--right {
    display: flex;
    flex-direction: column;
    margin-left: 20px;
  }

  .book-description {
    font-style: normal;
    font-weight: normal;
    font-size: 16px;
    line-height: 22px;
    color: #1a202c;
    margin-top: 19px;
  }

  .book-purchase-button {
    background: #9ae6b4;
    margin-top: 20px;
    height: 41px;
    font-style: normal;
    font-weight: bold;
    font-size: 18px;
    line-height: 25px;
    color: #1a202c;
    padding: 8px 14px;
    align-self: flex-end;
  }
</style>
