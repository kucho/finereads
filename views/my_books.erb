<% if @my_books.nil? %>
  ERROR 404: BOOK NOT FOUND
<% else %>
    <table>
        <tr>
            <th>Cover</th>
            <th>Title</th>
            <th>Author</th>
            <th>Status</th>
            <th>Date added</th>
            <th></th>
        </tr>
        <% @my_books.each do |book| %>
            <tr>
                <td>
                    <img src="<%= book.cover %>" alt="<%= book.title %>">
                </td>
                <td>
                    <p class = "title"><%=book.title%></p>
                </td>
                <td>
                    <p class = "text"><%=book.authors.join(', ')%></p>
                </td>
                <td>
                    <p class = "text"><%=book.state == '1' ? 'Want to Read' : book.state == '2' ? 'Read' : 'Reading'%></p>
                </td>
                <td>
                    <p class = "text"><%=book.date.strftime("%Y-%m-%d")%></p>
                </td>
                <td>
                    <form method="post">
                        <input name="uid" value="<%=book.uid%>" type="hidden">
                        <input name="_method" type="image" value="delete" src="/trash.png">
                    </form>
                </td>
            </tr>
        <% end %>
    </table>
<% end %>

<style>
.uid {
    display: none;
}

table {
  border-collapse: collapse;
  width: 621px;
  margin: auto;

}

th, td {
    
  padding: 8px;
  text-align: left;
  border-bottom: 1px solid #ddd;
  font-family: Nunito;
  font-style: normal;
  font-weight: normal;
  font-size: 14px;
  line-height: 19px;
}
img {
  height: 105px;
  width: 75px;
}
