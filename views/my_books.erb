<% if @my_books.nil? %>
  ERROR 404: BOOK NOT FOUND
<% else %>
    <div class = "top-title">
       <p class= "main-title">My books</p>
    </div>
    <table>
        <tr>
            <th>Cover</th>
            <th>Title</th>
            <th>Author</th>
            <th>Status</th>
            <th>Date added</th>
            <th></th>
        </tr>
        <% @my_books.each do |book| %>
            <tr>
                <td>
                    <img src="<%= book.cover %>" alt="<%= book.title %>">
                </td>
                <td>
                    <p class = "title"><%=book.title%></p>
                </td>
                <td>
                    <p class = "text"><%=book.authors.join(', ')%></p>
                </td>
                <td>
                    <p class = "text"><%=book.state == '0' ? 'Want to Read' : book.state == '1' ? 'Reading' : 'Read'%></p>
                </td>
                <td>
                    <p class = "text"><%=book.date.strftime("%Y-%m-%d")%></p>
                </td>
                <td>
                    <form method="post">
                        <input name="uid" value="<%=book.uid%>" type="hidden">
                        <a href="/books/<%=book.uid%>"><img src="/edit.png"></a>
                        <input name="uid" value="<%=book.uid%>" type="hidden">
                        <input name="_method" type="image" value="delete" src="/trash.png">
                    </form>
                </td>
            </tr>
        <% end %>
    </table>
<% end %>

<style>
a > img {
    height: auto;
    width: auto;
}

.uid {
    display: none;
}

