  }

  .search_input {
    width: 420px;
    padding: 0 15px;
  }

  .search_input ::placeholder {
    font-size: 16px;
    line-height: 22px;
    color: #1A202C;
  }

  .submit_button {
    width: 40px;
  }

  .yellow_bg {
    background: #F6AD55;
  }
</style>