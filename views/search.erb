    max-width: 850px;
    margin: 40px auto;
    justify-items: center;
    justify-content: center;
    align-content: center;
    align-items: center;
  }

  .book_link {
    color: #2B6CB0 !important;
    font-size: 12px !important;
    line-height: 16px !important;
  }

  .primary_button {
    color: white !important;
